{
  "name": "shellux-syntax",
  "displayName": "Shellux Syntax Highlighting",
  "description": "Syntax highlighting for Shellux scripting language (.sx files)",
  "version": "0.1.0",
  "publisher": "shellux",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "shellux",
    "shell",
    "scripting",
    "syntax",
    "highlighting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CuriouzK0d3r/shellux"
  },
  "license": "MIT",
  "scripts": {
    "package": "npx @vscode/vsce package",
    "package:install": "npx @vscode/vsce package && code --install-extension $(ls -t *.vsix | head -n1)",
    "package:publish": "npx @vscode/vsce publish"
  },
  "contributes": {
    "languages": [
      {
        "id": "shellux",
        "aliases": [
          "Shellux",
          "shellux"
        ],
        "extensions": [
          ".sx",
          ".shx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "shellux",
        "scopeName": "source.shellux",
        "path": "./syntaxes/shellux.tmLanguage.json"
      }
    ]
  }
}
